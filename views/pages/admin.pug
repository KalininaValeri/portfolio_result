                        input(name="css" type="text" placeholder="CSS").form__input
                    label.form__input-line JS
                        input(name="js" type="text" placeholder="JS").form__input
                fieldset.form_skills__fieldset
                    label.form__input-line PHP
                        input(name="php" type="text" placeholder="PHP").form__input
                    label.form__input-line SQL
                        input(name="sql" type="text" placeholder="SQL").form__input
                    label.form__input-line Node.js
                        input(name="node" type="text" placeholder="Node.js").form__input
                    label.form__input-line Mongo.db
                        input(name="mongo" type="text" placeholder="Mongo.db").form__input
                fieldset.form_skills__fieldset
                    label.form__input-line Git
                        input(name="git" type="text" placeholder="Git").form__input
                    label.form__input-line Gulp
                        input(name="gulp" type="text" placeholder="Gulp").form__input
                    label.form__input-line Bower
                        input(name="bower" type="text" placeholder="Bower").form__input

            .form__btns.form__input-line
                input(name="" type="submit" value="Отправить").form__btn-send
                input(name="" type="reset" value="Очистить").form__btn-reset