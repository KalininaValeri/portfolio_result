extends ../_template

block content
    include ../common/_greating
    include ../common/_menu

    .form-container
        form.form.form_skills#skills( method="POST")
            .form__subtitle.form_skills__subtitle Страница обо мне
            .status
            .form_skills__container
                fieldset.form_skills__fieldset
                    label.form__input-line HTML
                        input(name="html" type="text" placeholder="HTML").form__input
